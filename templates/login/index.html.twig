{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="container " >
    <form action="{{ path('login') }}" method="post">
    <div class="form-group mt-18 ">
        <label for="username">Email:</label>
        <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}"/>
    </div>
    <div class="form-group mb-3">
        <label for="password">Password:</label>
        <input type="password" class="form-control" id="password" name="_password"/>
        <input type="hidden" name="_target_path" value="/livre"/>
    </div>
        

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}

        <button type="submit" class="btn btn-primary pt-22">login</button>
    </form>

    </div>
{% endblock %}