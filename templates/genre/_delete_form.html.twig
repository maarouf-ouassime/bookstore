<form method="post" action="{{ path('genre_delete', {'id': genre.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ genre.id) }}">
    <button class="btn btn-danger mt-1 mb-1">Supprimer</button>
     <a href="{{ path('genre_show', {'id': genre.id}) }}" class="btn btn-success mt-1 mb-1">Afficher</a>
                    <a href="{{ path('genre_edit', {'id': genre.id}) }}" class="btn btn-info mt-1 mb-1">Modifier</a>
</form>
